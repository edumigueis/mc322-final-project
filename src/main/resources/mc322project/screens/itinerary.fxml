<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mc322project.ui.controllers.ItineraryController">
    <VBox spacing="15" fx:id="mainBox" styleClass="main-container" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"/>
    <Button styleClass="outlined-button" text="Save" AnchorPane.rightAnchor="15" AnchorPane.bottomAnchor="15"
            onMouseClicked="#saveItinerary">
        <graphic>
            <FontIcon styleClass="icon" iconLiteral="jam-save"/>
        </graphic>
    </Button>
</AnchorPane>