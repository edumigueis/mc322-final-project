<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mc322project.ui.controllers.DaysHeaderController">
    <padding>
        <Insets left="20" right="20" top="15"/>
    </padding>
    <VBox spacing="-5">
        <Label fx:id="cityNameLabel" styleClass="big-title"/>
        <Label fx:id="numberOfDaysLabel" styleClass="sub-title"/>
    </VBox>
    <Region HBox.hgrow="ALWAYS"/>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#prevWeek" styleClass="icon-button" prefWidth="45" prefHeight="45">
            <graphic>
                <FontIcon iconLiteral="jam-arrow-circle-left" iconSize="45" styleClass="icon"/>
            </graphic>
        </Button>
        <Button onAction="#nextWeek" styleClass="icon-button" prefWidth="45" prefHeight="45">
            <graphic>
                <FontIcon iconLiteral="jam-arrow-circle-right" iconSize="45" styleClass="icon"/>
            </graphic>
        </Button>
    </HBox>
</HBox>