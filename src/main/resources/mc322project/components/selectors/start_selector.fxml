<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mc322project.ui.controllers.StartTimeSelectorController"
            prefWidth="300" prefHeight="100" styleClass="main-container">
    <HBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <ComboBox styleClass="gray-padded-card" fx:id="hourComboBox"/>
            <ComboBox styleClass="gray-padded-card" fx:id="minuteComboBox"/>
        </HBox>
        <Button text="Update" styleClass="yellow-button" onMouseClicked="#selectTime">
            <graphic>
                <FontIcon iconLiteral="jam-arrow-right" styleClass="icon"/>
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
