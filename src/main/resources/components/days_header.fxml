<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.controllers.DaysHeaderController"
      stylesheets="/styling/styles.css">
    <VBox spacing="-5">
        <Label fx:id="cityNameLabel" styleClass="big-title"/>
        <Label fx:id="numberOfDaysLabel" styleClass="sub-title"/>
    </VBox>
    <Region HBox.hgrow="ALWAYS"/>
    <HBox alignment="CENTER">
        <Button text="Previous" onAction="#prevWeek"/>
        <Button text="Next" onAction="#nextWeek">
            <graphic>
                <FontIcon iconLiteral="fas-smile" iconSize="12"/>
            </graphic>
        </Button>
    </HBox>
</HBox>