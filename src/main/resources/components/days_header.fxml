<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane fx:id="grid" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ui.controllers.DaysHeaderController" hgap="15" stylesheets="/styling/styles.css">
    <columnConstraints>
        <ColumnConstraints percentWidth="33.33333"/> <!-- 1/3 of 100% -->
        <ColumnConstraints percentWidth="33.33333"/>
        <ColumnConstraints percentWidth="33.33333"/>
    </columnConstraints>
    <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="header-spacer">
        <Label fx:id="cityName" styleClass="big-title"/>
        <Label text="Add days" styleClass="sub-title"/>
    </VBox>
    <HBox GridPane.columnIndex="2" GridPane.rowIndex="0">
        <Button text="Previous" onAction="#prevWeek"/>
        <Button text="Next" onAction="#nextWeek"/>
    </HBox>
</GridPane>