<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import ui.components.ResponsiveImage?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ui.controllers.TimeSlotCardController" prefHeight="130" hgap="10"
          stylesheets="/styling/styles.css" styleClass="attraction-card" minHeight="130">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0" prefWidth="130.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="60.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <ResponsiveImage GridPane.columnIndex="0" GridPane.rowIndex="0">
        <imageUrl>
            https://francabrasil.com.br/wp-content/uploads/sites/11/2015/02/paris-1024x682.jpg
        </imageUrl>
        <clipCornerRadii>
            <Insets left="18" bottom="18"/>
        </clipCornerRadii>
    </ResponsiveImage>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
        <HBox>
            <Label fx:id="titleLabel" styleClass="green-title"/>
            <Label fx:id="durationLabel" styleClass="small-title"/>
        </HBox>
        <Label fx:id="descriptionLabel" wrapText="true" styleClass="text"/>
        <VBox>
            <HBox spacing="5">
                <MenuButton fx:id="optionsMenu" text="9:00">
                    <items>
                        <MenuItem onAction="#removeSelf" text="Remove"/>
                        <MenuItem onAction="#alterDuration" text="Alter Duration"/>
                        <MenuItem onAction="#alterOrder" text="Alter Start"/>
                    </items>
                </MenuButton>
            </HBox>
        </VBox>

    </VBox>
</GridPane>
