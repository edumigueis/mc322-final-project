<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox
        HBox.hgrow="ALWAYS"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="ui.controllers.ItineraryDayViewController"
        stylesheets="/styling/styles.css">
    <HBox spacing="5" styleClass="padded-card">
        <Label text="AAAA" fx:id="indexLabel" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Aaaaaa" fx:id="dayLabel" styleClass="header-label-day"/>
    </HBox>
    <HBox spacing="5">
        <Label text="Hotel: Copacabana Palace" styleClass="gray-padded-card"/>
        <Label text="Adicionar atração" onMouseClicked="#handleLabelClick"
               styleClass="purple-padded-card"/>
    </HBox>
    <VBox fx:id="cardsContainer" VBox.vgrow="ALWAYS"/>
</VBox>